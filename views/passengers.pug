doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title HomePage
        style.
            body {
                font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            }
    body 
        h1 Welcome to Taxi-booking app
        p You can book a taxi from one place to another

        h2 Passengers
        p There are #{passengers.length} passengers waiting

        ol 
            each passenger in passengers
                li #{passenger.name} wants to go to #{passenger.bookings[0] && passenger.bookings[0].destination}
