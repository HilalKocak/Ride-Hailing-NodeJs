extends layout
block content
    h2 Bookings
    p There are #{bookings.length} bookings 

    ol 
        each booking in bookings
            li
                p Passenger:
                    - if (booking.passenger)
                        a(href=`/passengers/${booking.passenger._id}`)= booking.passenger.name
                    - else
                        | No passenger assigned
                p Driver:
                    - if (booking.driver)
                        a(href=`/drivers/${booking.driver._id}`)= booking.driver.name
                    - else
                        | No driver assigned
                p Origin: #{booking.origin}
                p Destination: #{booking.destination}
